<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:Converters="clr-namespace:PL_ModernUI.Converters" x:Class="PL_ModernUI.Employee.EmployeeGroupingPage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Converters:AddToRangeConverter x:Key="AddToRangeConverter"/>
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Margin="{StaticResource SplitLeft}">
            <StackPanel>
                <TextBlock Text="Grouping options" Style="{StaticResource Heading2}" Margin="0,0,10,0" />
                <TextBlock Text="Please select one" Margin="0,0,0,5" />
                <ListView x:Name="GroupingList"/>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Column="1" />
        <ScrollViewer Grid.Column="2 " Margin="{StaticResource SplitRight}">
            <StackPanel>
                <TextBlock Text="Grouping result" Style="{StaticResource Heading2}" />
                <CheckBox x:Name="SortBox" Content ="Sort" />
                <ListView  x:Name="lvUsers" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,30,0,0" >
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsHitTestVisible="False" MaxWidth="{Binding ActualWidth, ElementName=lvUsers, Mode=OneWay}" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="11">
                                <Border.Background>
                                    <SolidColorBrush Color="Black" Opacity=".4"/>
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock FontSize="16" Foreground="#FF99FFFF" TextAlignment="Center" Margin="6,3" >
                                        <Run Text="{Binding Key, Mode=OneWay}"/>
                                        <Run Text="-"/>
                                        <Run>
                                            <Run.Style>
                                                <Style TargetType="{x:Type Run}">
                                                    <Setter Property="Text" Value="{Binding Key, ConverterParameter=1000, Converter={StaticResource AddToRangeConverter}, Mode=OneWay}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=GroupingType, Path=Content}" Value="Age">
                                                            <Setter Property="Text" Value="{Binding Key, ConverterParameter=10, Converter={StaticResource AddToRangeConverter}, Mode=OneWay}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Run.Style>
                                        </Run>
                                    </TextBlock>
                                    <ListView ItemsSource="{Binding}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Canvas>
