        <Button x:Name="Groupbutton" Content="Group" HorizontalAlignment="Left" Margin="180,41,0,0" VerticalAlignment="Top" Width="75" Click="Groupbutton_Click"/>
        <ContentControl x:Name="page" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Height="180" Width="272"/>
        <CheckBox x:Name="checkBox" Content="Sort" HorizontalAlignment="Left" Margin="182,20,0,0" VerticalAlignment="Top"/>

    </Grid>
